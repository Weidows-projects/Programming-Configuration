{
  "version": "2.0.0",
  "tasks": [
    {                         //这是我的gcc环境配置
      "type": "shell",
      "label": "g++",
      "command": "D:/Game/Demo/Dev-Cpp/MinGW64/bin/gcc.exe",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    },                          //gcc配置到这里结束
    {                           //Processing配置从这里开始添加
      "label": "Run Sketch",
      "type": "shell",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "command": "${config:processing.path}",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "args": [
        "--force",
        "--sketch=${fileDirname}",
        "--output=${fileDirname}\\out",
        "--run"
      ],
      "windows": {
        "args": [
          "--force",
          "--sketch=${fileDirname}",
          "--output=${fileDirname}\\out",
          "--run"
        ]
      }
    }                              //到这里结束
  ]
}

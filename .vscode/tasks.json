{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "g++", //任务名称,对应launch里需要调用
      "command": "D:/Game/Demo/Dev-Cpp/MinGW64/bin/gcc.exe",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc",
      ],
      "group": "build"
    }
  ]
}